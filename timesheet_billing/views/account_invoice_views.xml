<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_form_inherited_with_timesheet" model="ir.ui.view">
        <field name="name">invoice_form_inherited_with_timesheet</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[last()]" position="inside">
                <page string="Feuilles de temps facturées">
                    <field name="timesheets">
                        <tree>
                            <field name="date"/>
                            <field name="user_id" required="1" options="{&quot;no_open&quot;: True}"/>
                            <field name="name"/>
                            <field name="project_id" required="1"/>
                            <field name="task_id" context="{'default_project_id': project_id}" domain="[('project_id', '=', project_id)]"/>
                            <field name="unit_amount" string="Duration" sum="Total time" widget="float_time"/>
                            <field name="product_uom_id"/>
                            <field name="billed_amount" string="Durée facturée" sum="Total time" widget="float_time" readonly="True"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>