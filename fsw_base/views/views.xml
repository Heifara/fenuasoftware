<odoo>
	<data>
		<!-- Form -->
		<record model="ir.ui.view" id="view_company_form">
			<field name="name">view_company_form</field>
			<field name="model">res.company</field>
			<field name="priority">10</field>
			<field name="inherit_id" ref="base.view_company_form" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//field[@name='company_registry']" position="after">
						<field name="tahiti_num" />
						<field name="rcs_num" />
					</xpath>
					<xpath expr="//page[last()]" position="after">
						<page string="En tête">
							<field name="rml_header" />
						</page>
						<page string="Pied de page">
							<group>
								<field name="custom_footer" />
								<field name="rml_footer" />
							</group>
						</page>
					</xpath>
				</data>
			</field>
		</record>

		<!-- Top menu item -->
		<menuitem name="Sociétés" id="fsw_base.company_menuitem" action="base.action_res_company_form" web_icon="fsw_base,static/src/img/company_icon.png" />
	</data>
</odoo>