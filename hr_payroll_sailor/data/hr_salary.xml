<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hr_rule_basic_sailor" model="hr.salary.rule">
			<field name="name">Fishing Campaign Basic</field>
			<field name="category_id" ref="hr_payroll.BASIC"/>
			<field name="code">FC_BASIC</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">percentage</field>
			<field name="amount_percentage_base">payslip.fishing_campaign_wage</field>
			<field name="quantity">1</field>
			<field name="amount_percentage" eval="100"/>

			<!-- Contribution de la société -->
			<field name="register_id" ref=""/>
		</record>

		<!-- Règles -->
		<record id="cps_avts_sailor" model="hr.salary.rule">
			<field name="sequence" eval="205"/>
			<field name="name">A.V.T.S Marin</field>
			<field name="category_id" ref="l10n_pf_hr_payroll.category_employer"/>
			<field name="code">AVTS</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">percentage</field>
			<field name="amount_percentage_base">95000</field>
			<field name="quantity">1</field>
			<field name="amount_percentage" eval="0.02"/>

			<!-- Contribution de la société -->
			<field name="register_id" ref="l10n_pf_hr_payroll.contribution_cps"/>
		</record>
		<record id="cps_at_sailor" model="hr.salary.rule">
			<field name="sequence" eval="205"/>
			<field name="name">A.T Marin</field>
			<field name="category_id" ref="l10n_pf_hr_payroll.category_employer"/>
			<field name="code">PAT_AT</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">percentage</field>
			<field name="amount_percentage_base">95000</field>
			<field name="quantity">1</field>
			<field name="amount_percentage" eval="0.77"/>

			<!-- Contribution de la société -->
			<field name="register_id" ref="l10n_pf_hr_payroll.contribution_cps"/>
		</record>
		<record id="cps_sickness_sailor" model="hr.salary.rule">
			<field name="sequence" eval="105"/>
			<field name="name">Maladie Marin</field>
			<field name="category_id" ref="l10n_pf_hr_payroll.category_cps"/>
			<field name="code">MALADIE</field>
			<field name="active" eval="True"/>
			<field name="appears_on_payslip" eval="True"/>
			
			<!-- Conditions -->
			<field name="condition_select">none</field>

			<!-- Calcul -->
			<field name="amount_select">percentage</field>
			<field name="amount_percentage_base">95000</field>
			<field name="quantity">1</field>
			<field name="amount_percentage" eval="16.29"/>

			<!-- Contribution de la société -->
			<field name="register_id" ref="l10n_pf_hr_payroll.contribution_cps"/>
		</record>

		<!-- Structure des salaires -->
		<record id="structure_base_sailor" model="hr.payroll.structure">
			<field name="name">Pêche hauturière</field>
			<field name="code">FISH</field>
			<field name="parent_id" ref=""/>
			<field name="rule_ids" eval="[(6, 0, [
				ref('hr_rule_basic_sailor'),
				ref('hr_payroll.hr_rule_basic'),
				ref('hr_payroll.hr_rule_taxable'),
				ref('l10n_pf_hr_payroll.cps_A'),
				ref('l10n_pf_hr_payroll.cps_A_plus'),
				ref('l10n_pf_hr_payroll.cps_B'),
				ref('l10n_pf_hr_payroll.cps_B_plus'),
				ref('l10n_pf_hr_payroll.cps_sickness'),
				ref('l10n_pf_hr_payroll.cps_sickness_plus'),
				ref('l10n_pf_hr_payroll.cps_fsr'),
				ref('l10n_pf_hr_payroll.cps_fsr_plus'),
				ref('l10n_pf_hr_payroll.total_cps'),
				ref('hr_payroll.hr_rule_net'),
				ref('l10n_pf_hr_payroll.hab'),
				ref('l10n_pf_hr_payroll.hab_plus'),
				ref('l10n_pf_hr_payroll.af'),
				ref('l10n_pf_hr_payroll.af_plus'),
				ref('cps_avts_sailor'),
				ref('l10n_pf_hr_payroll.at'),
				ref('l10n_pf_hr_payroll.at_plus'),
				ref('l10n_pf_hr_payroll.ret_a'),
				ref('l10n_pf_hr_payroll.ret_a_plus'),
				ref('l10n_pf_hr_payroll.ret_b'),
				ref('l10n_pf_hr_payroll.ret_b_plus'),
				ref('l10n_pf_hr_payroll.am'),
				ref('l10n_pf_hr_payroll.am_plus'),
				ref('l10n_pf_hr_payroll.fsr'),
				ref('l10n_pf_hr_payroll.fsr_plus'),
				ref('l10n_pf_hr_payroll.fpc'),
				ref('l10n_pf_hr_payroll.fpc_plus'),
				ref('l10n_pf_hr_payroll.employer_total'),
				])]"/>
		</record>
	</data>
</odoo>