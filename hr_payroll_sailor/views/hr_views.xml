<odoo>
	<data>
		<record id="view_employee_form_inherited" model="ir.ui.view">
            <field name="name">hr.employee.form.inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//notebook" position='inside'>
            		<page name="" string="Fishing Campaign">
            			<field name="fishing_campaign_share_distributions">
                                    <tree>
                                          <field name="fishing_campaign"/>
                                          <field name="share_weight"/>
                                          <field name="wage"/>
                                          <field name="deposit"/>
                                          <field name="residual"/>
                                    </tree>
                              </field>
            		</page>
            	</xpath>
            </field>
        </record>
	</data>
</odoo>