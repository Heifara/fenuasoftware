<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">

		<!-- url /helpdesk/ticket/7 -->
		<template id="tickets_followup" inherit_id="website_helpdesk.tickets_followup">
			<xpath expr="//div[@class='panel-body']/div[last()]" position="after">
				<div class="row">
					<strong>Desctiption</strong>
					<field class="panel-body" t-field="ticket.description" />
				</div>
				<div class="row">
					<strong>Feuilles de temps</strong>
					<table class="table table-condensed">
						<tr>
							<th>Description</th>
							<th>Date</th>
							<th>Dur√©e</th>
						</tr>
						<t t-foreach="ticket.timesheets" t-as="timesheet">
							<tr>
								<td>
									<span t-field="timesheet.name" />
								</td>
								<td>
									<span t-field="timesheet.date" />
								</td>
								<td>
									<span t-field="timesheet.unit_amount" />
								</td>
							</tr>
						</t>
					</table>
				</div>
			</xpath>
		</template>
	</data>
</odoo>
