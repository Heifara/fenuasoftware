<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="tinymce_form" model="ir.ui.view">
			<field name="name">tinymce.tinymce form</field>
			<field name="model">tinymce.tinymce</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="name" />
						<field name="html" />
						<field name="tinymce" widget="tinymce"/>
					</group>
				</form>
			</field>
		</record>

		<record id="tinymce_action" model="ir.actions.act_window">
			<field name="name">Tiny MCEE</field>
			<field name="res_model">tinymce.tinymce</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem name="TinyMCE" id="tinymce.root_menu" action="tinymce_action" />
	</data>
</odoo>
