<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views -->
    <record id="vat_report_real_form" model="ir.ui.view">
        <field name="name">vat_report_real_form</field>
        <field name="model">vat.real.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <field name="company_id" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <group colspan="4">
                        <group string="Période de déclaration">
                            <field name="type"/>
                            <field name="monthly" attrs="{'invisible': [('type', '!=', 'monthly')]}"/>
                            <field name="quarterly" attrs="{'invisible': [('type', '!=', 'quarterly')]}"/>
                        </group>
                        <group string="Moyen de paiement">
                            <field name="payment_method"/>
                        </group>
                    </group>
                    <group colspan="4" groups="base.group_no_one">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </sheet>
                <footer>
                    <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="vat_real_report_action" model="ir.actions.act_window">
        <field name="name">Vat Real Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vat.real.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="vat_real_report_menuitem" name="TVA Régime réel" parent="dicp_vat_menu" action="vat_real_report_action" groups="account.group_account_manager"/>
</odoo>
