<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="theme_customize" inherit_id="theme_graphene.theme_customize" name="theme_graphene_plus modal">
		<xpath expr="//div[@name='fonts']/div[last()]" position="before">
			<div class="row">
				<hr />
				<h4 class="text-center">Google Font</h4>
				<div class="col-xs-4">
					<label class="chd-fonts-combi center-block">
						<h6>Tangerine</h6>
						<input name="googvar" type="radio" data-xmlid="fsw_theme_graphene.option_font_tangerine" />
					</label>
				</div>
				<div class="col-xs-4">
					<label class="chd-fonts-combi center-block">
						<h6>Amatic SC</h6>
						<input name="googvar" type="radio" data-xmlid="fsw_theme_graphene.option_font_amatic_sc" />
					</label>
				</div>
			</div>
		</xpath>
	</template>

	<!-- Serif fonts -->
	<template id="option_font_tangerine" name="option_font_tangerine" inherit_id="website.assets_frontend" active="True">
		<xpath expr="//link[last()]" position="after">
			<link href="/fsw_theme_graphene/static/src/less/options/fonts/tangerine.less" rel="stylesheet" type="text/less" />
		</xpath>
	</template>
	<template id="option_font_amatic_sc" name="option_font_amatic_sc" inherit_id="website.assets_frontend" active="True">
		<xpath expr="//link[last()]" position="after">
			<link href="/fsw_theme_graphene/static/src/less/options/fonts/amatic_sc.less" rel="stylesheet" type="text/less" />
		</xpath>
	</template>

</odoo>